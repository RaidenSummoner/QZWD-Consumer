.page {
  height: 100vh;
  width: 100vw;
  background-color: white;
}
.star {
  width: 15px;
  height: 15px;
  margin-left: auto;
  right: 10px;
}
.rili {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  top: 5px;
  width: 80%;
  background-color: white;
  border-radius: 10px;
  border: 3px solid grey;
}
.date {
  text-align: center;
}
.date1 {
  left: 10px;
}
.guess-section {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.guess-section .guess-item {
  display: flex;
  background-color: white;
  border-radius: 15px;
  /* 设置按钮圆角半径 */
  border: 1px solid black;
  flex-direction: column;
  width: 46%;
  padding-bottom: 40rpx;
}
.guess-section .guess-item:nth-child(2n+1) {
  margin-right: 4%;
}
.guess-section .image-wrapper {
  width: 100%;
  height: 330rpx;
  border-radius: 15px;
  overflow: hidden;
}
.guess-section .image-wrapper image {
  width: 100%;
  height: 100%;
  opacity: 1;
}
.guess-section .title {
  font-size: 10px;
  color: #333;
  line-height: 80rpx;
}
.guess-section .hol {
  display: flex;
  font-size: 4px;
  line-height: 2.5;
  color: gray;
  margin-left: 2px;
}
.guess-section .hole {
  font-size: 10px;
  overflow: hidden;
  font-size: 4px;
  white-space: nowrap;
  margin-left: 1em;
  margin-right: 1em;
}

